{
    "scopeName": "source.olvasm",
    "name": "A5BAL8 Olivetti Assembly",
    "fileExtensions": [".olvasm"],
    "patterns": [
        {
            "name": "keyword.instruction.olvasm",
            "match": "(LI|PR|AR|LRZ|ARI|SR|SRI|RMC|LAX|SAX|LCR|LZ|LR|FD)"
        },
        {
            "name": "variable.parameter.register.olvasm",
            "match": "\\%([1][0-5]|0?[0-9]|M|A|RA|R|WR|CR)"
        },
        {
            "name": "constant.numeric.olvasm",
            "match": "\\$(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[1-9]?[0-9])"
        },
        {
            "name": "comment.line.semicolon.olvasm",
            "match": ";.*$"
        },
        {
            "name": "register.count.olvasm",
            "match": "~0?(1[0-5]|[0-9])"
        }
    ],
    "repository": {}
}
